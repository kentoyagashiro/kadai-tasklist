<div class="row">
  <div class="col-6">
    <%= form_with(model: task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <ul class="mb-0">
            <% task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
          <%= f.label :status, 'タスク名' %>
          <%= f.text_field :status, class: 'form-control' %>
      </div>
      <div class="mb-4">
        <%= f.label :content, 'タスク詳細' %>
        <%= f.text_field :content %>
      </div>
      
      
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>