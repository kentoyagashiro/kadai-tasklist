<div class="row">
  <div class="col-6">
    <%= form_with(model: task) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="mb-3">
          <%= f.label :status, 'タスク名' %>
          <%= f.text_field :status, class: 'form-control' %>
      </div>
      <div class="mb-4">
        <%= f.label :content, 'タスク詳細' %>
        <%= f.text_field :content %>
      </div>
      
      
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>